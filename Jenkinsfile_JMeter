pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
           sh 'docker run -v /home/docker-master/jmeter_home/TestPlan3.jmx:/opt/TestPlan3.jmx -v /home/docker-master/jmeter_home/results:/results/ justb4/jmeter -n -t /opt/TestPlan3.jmx -l /results/result.jtl'
                }
        }
        }
        post {
        always{
            /*Publish test results to Jenkins*/
            step([$class: 'perfReport', sourceDataFiles:"/home/docker-master/jmeter_home/results/*.jtl", failBuildIfNoResultFile : true, showTrendGraphs : true])
        }
}
}
